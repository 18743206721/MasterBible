<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/board" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/xtab_pro"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/white"
            app:xTabDisplayNum="2"
            app:xTabIndicatorColor="@color/textBlack"
            app:xTabIndicatorHeight="2dp"
            app:xTabMode="scrollable"
            app:xTabPaddingEnd="10dp"
            app:xTabPaddingStart="10dp"
            app:xTabSelectedTextColor="@color/textBlack"
            app:xTabSelectedTextSize="14sp"
            app:xTabTextColor="@color/textBlack"
            app:xTabTextSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/board"
            android:orientation="vertical">

            <!--项目-->
            <LinearLayout
                android:id="@+id/ll_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_programs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--培训报名-->
            <LinearLayout
                android:id="@+id/ll_baoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bumen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="选择部门*"
                        android:textColor="@color/textBlack"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:hint="安监部"
                        android:background="@drawable/bg_editgrey"
                        android:inputType="textMultiLine"
                        android:lines="1"
                        android:maxLines="11"
                        android:padding="@dimen/outside_margin"
                        android:textColor="@color/title_color"
                        android:textColorHint="@color/hint_color"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

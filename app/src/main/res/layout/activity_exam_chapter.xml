<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/board"
    android:orientation="vertical"
    tools:context=".maincode.home.view.activity.ExamChapterActivity">

    <include layout="@layout/toolbar_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/fengexian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_extersices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/exam_chapter" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="70dp"
                android:text="考试类型"
                android:textColor="@color/textBlack"
                android:textSize="15sp" />

            <TextView
                android:layout_toRightOf="@+id/tv_2"
                android:id="@+id/tv_zhonglei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安监局-电工"
                android:layout_marginLeft="50dp"
                android:textColor="@color/textBlack"
                android:textSize="15sp" />
        </RelativeLayout>
        <!--考试时间-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="70dp"
                android:text="考试时间"
                android:textColor="@color/textBlack"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_toRightOf="@+id/tv_1"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60分钟"
                android:textColor="@color/textBlack"
                android:textSize="15sp" />
        </RelativeLayout>
        <!--合格标准-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="70dp"
                android:text="合格标准"
                android:textColor="@color/textBlack"
                android:textSize="15sp" />

            <TextView
                android:layout_toRightOf="@+id/tv_3"
                android:id="@+id/tv_fenshu"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90分"
                android:textColor="@color/textBlack"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_baodian_jieshao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="计分规则:模拟考试下不能修改答案,每做错1道题扣一分,合格标准为90分"
                android:textColor="@color/textDarkGray"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_start"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/btn_exam_chapter"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>



</LinearLayout>